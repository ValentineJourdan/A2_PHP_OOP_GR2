{% extends 'base.html.twig' %}
{% block content %}
    <div class="text-center">
        <h1>Let's Fight !</h1>
    </div>
    <!-- First pokemon -->
    <div class="col-md-6">
        <h3>{{ pokemon1.name }}</h3>
        {% if pokemon1.type == 0 %}
            <p>Type Fire</p>
        {% elseif pokemon1.type == 1 %}
            <p>Type Water</p>
        {% elseif pokemon1.type == 2 %}
            <p>Type Plant</p>
        {% endif %}
        <p class="
        {% if pokemon1.hp > 70 %}
        alert-success
        {% elseif pokemon1.hp > 40 %}
        alert-warning
        {% else %}
        alert-danger
        {% endif %}
        ">HP :{{ pokemon1.hp }}</p>
        <p>Trainer : {{ pokemon1.trainer.username }}</p>
    </div>
    <!-- Second pokemon -->
    <div class="col-md-6">
        <h3>{{ pokemon2.name }}</h3>
        {% if pokemon2.type == 0 %}
            <p>Type Fire</p>
        {% elseif pokemon2.type == 1 %}
            <p>Type Water</p>
        {% elseif pokemon2.type == 2 %}
            <p>Type Plant</p>
        {% endif %}
        <p class="alert-danger">
            Lost :{{ attack }}
        </p>
        <p class="
        {% if pokemon2.hp > 70 %}
        alert-success
        {% elseif pokemon2.hp > 40 %}
        alert-warning
        {% else %}
        alert-danger
        {% endif %}
        ">HP :{{ pokemon2.hp }}</p>
        <p>Trainer : {{ pokemon2.trainer.username }}</p>
    </div>
    <div class="text-center">
        <a href="dashboard.php" class="btn btn-default">Go back to Dashboard</a>
    </div>
{% endblock %}
